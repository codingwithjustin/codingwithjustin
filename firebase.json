{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": ["yarn build:funcs"],
    "source": "packages/functions",
    "runtime": "nodejs12"
  },
  "hosting": {
    "predeploy": ["yarn build:web"],
    "public": "packages/website/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}
